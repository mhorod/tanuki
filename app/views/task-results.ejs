<div>
    <div>
        <% for (const group of group_results) { %>
            <div class="flex flex-row bg-zinc-800 gap-5 content-center p-2 border-b hover:bg-zinc-700 hover:cursor-pointer"
                type="button" data-bs-toggle="collapse" data-bs-target="#group-<%= group.id %>">
                <div class="flex flex-row items-center grow">
                    <%= group.name %>
                </div>
                <div class="flex flex-row items-center status-ok">
                    <%- await include("views/rich-status.ejs", {status: group.status}); %>
                </div>
            </div>
            <div id="group-<%= group.id %>" class="collapse hide pl-6">
                <table class="table-auto w-full">
                    <thead>
                        <tr class="border-b border-white">
                            <th>name</th>
                            <th>status</th>
                            <th>time</th>
                        </tr>
                    </thead>
                    <tbody id="tab">
                        <% for (const task of group.task_results) { %>
                            <tr class="even:bg-zinc-900 odd:bg-zinc-800 text-center">
                                <td class="px-2 py-2">
                                    <%= task.name %>
                                </td>
                                <td class="px-2 py-2 status-ok">
                                    <%- await include("views/rich-status.ejs", {status: task.status}); %>
                                </td>
                                <td class="px-2 py-2">
                                    <%= task.execution_time %>s
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
    </div>

</div>
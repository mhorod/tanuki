<div class="overflow-y-auto py-4 px-3">
    <h3 class="text-2xl font-semibold mt-0 mb-2 text-slate-100">Closest deadlines</h3>
    <table class="table-auto w-full">
        <thead>
            <tr class="border-b border-white">
                <th>problem</th>
                <th>deadline</th>
                <th>points</th>
            </tr>
        </thead>
        <% for (const problem of problems) { %>
            <tr class="odd:bg-zinc-900 even:bg-zinc-800 text-center">
                <td class="px-2 py-2">
                    <%= problem.name %>
                </td>
                <td class="px-2 py-2">
                    <%= problem.due_date %>
                </td>
                <td class="px-2 py-2"> 1.0/1.0 </td>
            </tr>
            <% } %>

    </table>
</div>
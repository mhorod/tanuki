<!DOCTYPE html>
<html lang="en">

<head>
    <%- await include("views/common-head.ejs"); %>
        <title>
            Tanuki
        </title>
</head>

<body class="bg-zinc-900 text-white">
    <%- await include("views/nav.ejs", {user: user}); %>

        <div class=" container mx-auto p-6 divide-x">
            <div class="flex flex-col md:flex-row space-x-4">
                <div class="flex flex-col text-lg">
                    <h3 class="text-2xl font-semibold mt-0 mb-2 text-slate-100">
                        <%= contest.name %>
                    </h3>
                    <a href="/contest/<%= contest.id %>/about" class="text-link cursor-pointer py-2 ">
                        About
                    </a>
                    <a href="/contest/<%= contest.id %>/results" class="text-link cursor-pointer py-2">
                        Results
                    </a>
                    <a href="/contest/<%= contest.id %>" class="text-link cursor-pointer py-2">
                        Problems
                    </a>
                </div>
                <div class="grow">
                    <% if (typeof(problems)=='undefined' ) { problems=[] } %>
                        <%- await include("views/student/problems-list.ejs", { problems: problems }); %>
                </div>
            </div>
        </div>

        <%- await include("views/common-scripts.ejs"); %>
</body>

</html>
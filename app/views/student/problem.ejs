<!DOCTYPE html>
<html lang="en">

<head>
    <%- await include("views/common-head.ejs"); %>
        <title>
            Tanuki
        </title>
</head>

<body class="bg-zinc-900 text-white">
    <%- await include("views/nav.ejs", {user: user}); %>

        <div class=" container mx-auto p-6 divide-x">
            <div class="flex flex-col items-start space-y-4">
                <div class="flex items-center space-x-4">
                    <a href="/contest/<%= contest.id %>/results?problem=<%= problem.id %>" class="normal-btn">
                        Recent submits
                    </a>
                    <a href="/submit/<%= contest.id %>/<%= problem.id %>" class="submit-btn">
                        Submit
                    </a>
                </div>
                <div class="flex flex-row text-lg">
                    <div class="flex flex-row grow gap-4 items-center">
                        <h3 class="text-2xl font-semibold mt-0 text-slate-100">
                            <a class="text-link" href="/contest/<%= contest.id %> ">
                                <%= contest.shortname %>
                            </a> / <%= problem.name %>
                        </h3>
                        <%- await include('views/status.ejs', {status: problem.status}) %>
                    </div>
                </div>
                <b class="text-xl font-semibold"> Termin:
                    <%= problem.due_date %>
                </b>
                <div class="grow">
                    <h3 class="text-2xl font-semibold mt-0 mb-2 text-slate-100">
                        Treść zadania
                    </h3>
                    <%= problem.statement %>
                </div>
            </div>
        </div>

        <%- await include("views/common-scripts.ejs"); %>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- await include("views/common-head.ejs"); %>
        <title>
            Tanuki
        </title>
</head>

<body class="bg-zinc-900 text-white">
    <%- await include("views/nav.ejs", {user: user}); %>

        <div class=" container mx-auto p-6 divide-x">
            <div class="flex flex-col space-x-4">
                <div class="flex flex-row text-lg">
                    <div class="flex flex-row grow gap-4 items-center mb-4">
                        <h3 class="text-2xl font-semibold mt-0 mb-2 text-slate-100">
                            <a class="text-link" href="/contest/<%= contest.id %> ">
                                <%= contest.shortname %>
                            </a> / <%= problem.name %>
                        </h3>
                        <a href="/submit/<%= contest.id %>/<%= problem.id %>" class="normal-btn">
                            submit
                        </a>
                    </div>

                    <div>
                        <%- await include("views/status.ejs", {status: "OK" }); %>
                    </div>

                </div>
                <div class="grow">
                    <h3 class="text-2xl font-semibold mt-0 mb-2 text-slate-100">
                        Treść zadania
                    </h3>
                    <%= problem.statement %>
                </div>
            </div>
        </div>

        <%- await include("views/common-scripts.ejs"); %>
</body>

</html>